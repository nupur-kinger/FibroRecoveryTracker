<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="MetricText">
        <item name="android:textColor">@color/myPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ChartTitle">
        <item name="android:textColor">@color/myPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MetricPadding">
        <item name="android:paddingTop">@dimen/table_row_padding</item>
        <item name="android:paddingBottom">@dimen/table_row_padding</item>
    </style>

    <style name="JourneyCard">
        <item name="android:background">@color/cardview_dark_background</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:elevation">7dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="ScoreReportsLabel">
        <item name="android:textColor">@color/mtrl_on_surface_disabled</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ScoreReportsValue">
        <item name="android:textColor">@color/mtrl_on_surface_disabled</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
</resources>